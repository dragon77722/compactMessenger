<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Messenger</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Compact Messenger", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                @if (Request.IsAuthenticated) { 
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("My Friend", "Index", "Friend")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("User Settings", "Index", "Settings")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "Index", "Search")</li>
                </ul>
                }
                @if(string.Compare(User.Identity.Name, "admin@admin.ru") == 0)
                {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ban", "Index", "Delete")</li>
                </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Messenger Inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
